@model List<AayushMandavya.Models.employee>

@{
    ViewBag.Title = "mainview";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}
<style>
    table, td, th {
        background-color: aquamarine;
    }
</style>
<h2>Employee Table</h2>

<table class="table" border="1">
    <tr>
        <th>SN</th>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var data in Model)
    {
<tr>
    <td>@(++sn)</td>
    <td>@(data.id)</td>
    <td>@(data.name)</td>
    <td>@(data.address)</td>
    <td>@(data.contact)</td>
    <td><a href="@Url.Action("Edit", new { id=data.id,})">Edit</a></td>
    <td><a href="@Url.Action("Delete", new { id=data.id,})">Delete</a></td>
</tr>
    }
</table>

<a href="@Url.Action("create")">Add New Record</a>

