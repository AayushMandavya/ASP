@model List<AayushMandavya.Models.employee>

@{
    ViewBag.Title = "mainview";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}
<style>
    table, td, th {
        background-color: aquamarine;
    }
</style>

@using(Html.BeginForm("mainview",null,FormMethod.Get))
            {
              <br /><br />  <b>Search Option</b><br /><br />@Html.RadioButton("option","name") <text>Name</text>
    @Html.RadioButton("option","id") <text>ID</text><br /><br /> @Html.TextBox("search") <input type="submit" name="submit" value="search" />
            }
<h2>Employee Table</h2>

<table class="table" border="1">
    <tr>
        <th>SN</th>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var data in Model)
    {
<tr>
    <td>@(++sn)</td>
    <td>@(data.id)</td>
    <td>@(data.name)</td>
    <td>@(data.address)</td>
    <td>@(data.contact)</td>
    <td><a href="@Url.Action("Edit", new { id=data.id,})">Edit</a></td>
    <td><a href="@Url.Action("Delete", new { id=data.id,})">Delete</a></td>
</tr>
    }
</table>

<a href="@Url.Action("create")">Add New Record</a>

